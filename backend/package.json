{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "test": "vitest",
    "dev": "node --watch --import tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/src/server.js",
    "deploy": "npm run build && npm run start",
    "migrate": "npx knex migrate:latest",
    "seed": "npx knex seed:run",
    "up": "docker-compose build --no-cache && docker-compose up",
    "down": "docker-compose down",
    "down:volumes": "docker-compose down --volumes",
    "lint": "eslint src/**/*.{js,ts}",
    "watch": "tsc --watch",
    "format": "prettier --write '**/*.{js,ts,json}'",
    "precommit": "npm run lint && npm run format",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix"
  },
  "keywords": [],
  "author": "Claudio Martin Herranz",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "9.18.0",
    "@testing-library/jest-dom": "6.6.3",
    "@types/amqplib": "0.10.6",
    "@types/bcryptjs": "2.4.6",
    "@types/jsonwebtoken": "9.0.7",
    "@types/multer": "1.4.12",
    "@typescript-eslint/eslint-plugin": "8.20.0",
    "@typescript-eslint/parser": "8.20.0",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "5.2.1",
    "globals": "15.14.0",
    "nodemon": "3.1.9",
    "prettier": "3.4.2",
    "ts-node": "10.9.2",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "typescript-eslint": "8.20.0",
    "vitest": "2.1.8"
  },
  "dependencies": {
    "@types/express": "5.0.0",
    "@types/morgan": "1.9.9",
    "amqplib": "0.10.5",
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "jsonwebtoken": "9.0.2",
    "knex": "3.1.0",
    "morgan": "1.10.0",
    "multer": "1.4.5-lts.1",
    "pg": "8.13.1",
    "socket.io": "4.8.1",
    "uuidv4": "6.2.13"
  }
